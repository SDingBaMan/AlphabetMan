            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:background="@drawable/preference_last_item"
                android:clickable="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:padding="8dp"
                    android:text="@string/string_hall_zongAll"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/AllYunNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="70dp"
                    android:text="24根"
                    android:textSize="18dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:layout_below="@+id/viewpager"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="1dp"
                android:background="#aeabab"
                android:padding="2dp" />

            <LinearLayout
                android:id="@+id/hall_buttonList"
                android:layout_width="match_parent"
                android:layout_height="95dip"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/dataOnline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/hall_btn_list_item"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp">

                    <ImageView
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:src="@drawable/tabbar_compose_headlines" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/string_hall_button1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setLanya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/hall_btn_list_item"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp">

                    <ImageView
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:src="@drawable/messagescenter_subscription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/string_hall_button2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fenxiBao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/hall_btn_list_item"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp">

                    <ImageView
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:src="@drawable/messagescenter_at" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/string_hall_button3" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/sss"
                android:layout_width="match_parent"
                android:layout_height="95dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tubiaoTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/hall_btn_list_item"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp">


                    <ImageView
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:src="@drawable/tabbar_compose_photo" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/string_hall_button4" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/show_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/hall_btn_list_item"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp">

                    <ImageView

                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:src="@drawable/tabbar_compose_wbcamera" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/string_hall_button5" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/zhiding_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/hall_btn_list_item"
                    android:clickable="true"
                    android:gravity="center"

                    android:orientation="vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp">

                    <ImageView
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:src="@drawable/messagescenter_good" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/string_hall_button6"  />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/buttonPanel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="xxxx" />

                <EditText
                    android:id="@+id/sendDataToLanya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ok"
                    android:layout_marginLeft="30dip"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dip"
                    android:text="Dddddd"
                    android:layout_marginLeft="30dip"
                    android:id="@+id/revicesMainText"/>
            </LinearLayout>



        </LinearLayout>

    </ScrollView>
</RelativeLayout>
