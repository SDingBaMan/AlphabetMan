<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dip">

        <!--<com.loopj.android.image.SmartImageView-->
        <!--android:id="@+id/siv_listview_item_icon"-->
        <!--android:layout_width="60dip"-->
        <!--android:layout_height="60dip"-->
        <!--android:src="@drawable/a" />-->

        <RelativeLayout
            android:id="@+id/siv_listview_item_icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clickable="true">

            <ImageView

                android:id="@+id/head_image"
                android:layout_width="55dp"
                android:layout_height="55dp"

                android:src="@drawable/skin2" />

            <TextView
                android:id="@+id/PicsNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Me"
                android:textSize="25dip" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_listview_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="16dip"
            android:layout_toRightOf="@id/siv_listview_item_icon"
            android:singleLine="true"
            android:text="我是谁谁谁"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_listview_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="16dip"
            android:layout_toRightOf="@id/tv_listview_item_title"
            android:text="我是谁谁谁"
            android:layout_alignBaseline="@+id/tv_listview_item_title"
            android:textColor="#aba5a5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_listview_item_detail"
            android:layout_width="260dip"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_listview_item_title"
            android:layout_below="@id/tv_listview_item_title"
            android:layout_marginBottom="7dip"
            android:layout_marginTop="5dip"
            android:text="啊发送旅客登机挥发速度发送旅客
            登机啊发送旅客登机挥发速度发送旅客登机啊发送旅客
            登机挥发速度发送旅客登机啊发"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tv_listview_item_detail"
            android:layout_marginTop="15dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shareTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="30dip"
                android:text="一分钟前"
                android:textColor="#615d5d"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_pop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:padding="10dp"
                android:scaleType="fitEnd"
                android:src="@drawable/icon_coment" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3.0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
        android:background="#dadada"
        android:padding="1dp" />


</LinearLayout>

