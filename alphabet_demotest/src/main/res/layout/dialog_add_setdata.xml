<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    >

    <TextView
        android:layout_width="300dip"
        android:layout_height="50dip"
        android:background="#66ff6600"
        android:gravity="center"
        android:text="请输入设置的数据"
        android:textColor="#f5f3f3"
        android:textSize="22sp" />


    <EditText
        android:id="@+id/et_setdataday"
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="请输入设置的天数"
        android:padding="10dip" />

    <EditText
        android:id="@+id/et_setyannumber"
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="请输入最近抽的烟数（根）"
        android:padding="10dip" />

    <LinearLayout
        android:layout_width="300dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ok"
            android:background="@drawable/select_setdatabutton"
            android:layout_width="130dip"
            android:layout_marginRight="5dip"
            android:layout_height="wrap_content"
            android:text="确 定"
            android:textSize="20dp"/>

        <Button
            android:background="@drawable/select_setdatabutton"
            android:layout_marginLeft="5dip"
            android:id="@+id/cancel"
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:text="取 消"
            android:textSize="20dp"/>


    </LinearLayout>


</LinearLayout>